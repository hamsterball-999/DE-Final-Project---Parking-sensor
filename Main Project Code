from pitop import UltrasonicSensor, LED, Buzzer
from time import sleep

ultrasonic_sensor = UltrasonicSensor("D4")
red = LED("D2")
yellow = LED("D1")
green = LED("D0")
buzzer = Buzzer("D3")

while True:
    print(ultrasonic_sensor.distance)
    sleep(0.1)
    if ultrasonic_sensor.distance > 0.3:
        green.on()
        yellow.off()
        red.off()
        buzzer.off()
        screen.display_text("All Good")
    elif ultrasonic_sensor.distance < 0.15 and ultrasonic_sensor.distance > 0.10:
        green.off()
        yellow.on()
        red.off()
        buzzer.off()
        screen.display_text("Getting Closer...")
    elif ultrasonic_sensor.distance < 0.09:
        green.off()
        yellow.off()
        red.on()
        buzzer.on()
        screen.display_text("Stop!!")

